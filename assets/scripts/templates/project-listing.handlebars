<tr>
  <th>ID</th>
  <th>Project</th>
  <th>Description</th>
  <th>Sample Clip</th>
  <th>
    <button class="menu-buttons" data-toggle="modal" data-target="#newProjectModal">New Project</button>
  </th>

</tr>

{{#each projects as |project|}}
  {{log project}}


      <tr data-id="{{project.id}}">
        <td data-id="{{project.id}}"> <small>{{ project.id }}</small></td>
        <td data-id="{{project.id}}"> <button data-id="{{project.id}}" class="open-project-button"> {{ project.name }} </button> </td>
        <td data-id="{{project.id}}"> <small>{{ project.description }}</small></td>
        <td class="player-container"> <audio controls> <source src="https://dl.dropbox.com/s/c6ihwtuloi1sr3b/SPAKE_sample-1%20%5BR-Dulude%5D.mp3?dl=0" type="audio/mpeg"> </audio> </td>
        <td>
          <button type="submit" class="update-button update-project" data-toggle="modal" data-target="#updateProjectModal">edit</button> /
          <button type="submit" class="delete-button delete-project">delete</button>
        </td>
      </tr>

{{/each}}
